/*底部的确定按钮*/
.sureBtn{
    width: 85%;
    height: 40px;
    background-image: linear-gradient(-90deg, #26AB28 50%, #26AB28 100%);
    box-shadow: 0 2px 5px 0 #0166E1;
    border-radius: 67px;
    /* margin-top: 50rpx; */
    margin: 15px auto;
    text-shadow: 0 1px 1px rgba(0,0,0,.3);
    font-size: 18px;
    line-height: 40px;
    font-family: PingFangSC-Regular;
    color: #FFFFFF;
    border: 0 !important;
}

/* 选中 */
.selecteIcon {
  
  display: block;
  width: 20px;
  height: 25px;
  margin-right: 30px;
}

/* 未选中 */
.unselecteIcon {

  display: none;
  width: 20px;
